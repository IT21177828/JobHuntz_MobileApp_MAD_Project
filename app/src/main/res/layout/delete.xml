<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".activities.UpdateVacancy">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="276dp"
        android:layout_height="46dp"
        android:layout_marginTop="110dp"
        android:text="@string/delete"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="@dimen/Heading"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="342dp"
        android:layout_height="55dp"
        android:layout_marginTop="110dp"
        android:text="@string/areyou"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/cancelpBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fieldHeight"
        android:layout_marginTop="120dp"
        android:text="@android:string/cancel"
        android:textSize="@dimen/Text22"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="VisualLintBounds" />

    <Button
        android:id="@+id/deletepBtn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fieldHeight"
        android:layout_marginTop="120dp"
        android:backgroundTint="#EF1150"
        android:text="@string/del"
        android:textSize="@dimen/Text22"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.83"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:ignore="VisualLintBounds" />

</androidx.constraintlayout.widget.ConstraintLayout>